@model IEnumerable<VetClinicWebApplication8.Models.Owner_Pet>

@{
    ViewData["Title"] = "Owner and Pet List";
}

<div class="container">
    <h1>Owner and Pet Information</h1>
    <form method="get" class="mb-3">
        <div class="form-group d-flex">
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search by Owner or Pet Name..." />
            <button type="submit" class="btn btn-primary ml-2">Search</button>
        </div>
    </form>
    @if (!Model.Any())
    {
        <p>No records available.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Owner Name</th>
                    <th>Phone Number</th>
                    <th>Pet Name</th>
                    <th>Vaccination Date</th>
                    <th>NextVac Date</th>
                    <th>Deworming</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.OwnerName</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.PetName</td>
                        <td>@item.Vac_Date.ToShortDateString()</td>
                        <td>@item.NextVac_Date.ToShortDateString()</td>
                        <td>@item.Deworming</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.OwnerId" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.OwnerId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

