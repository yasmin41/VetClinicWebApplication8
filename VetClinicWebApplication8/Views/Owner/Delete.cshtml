@model VetClinicWebApplication8.Models.Owner_Pet

@{
    ViewData["Title"] = "Delete";
}

<div class="page-content">
    
    <p>Are you sure you want to delete this record?</p>

    <div>
        <strong>Owner Name:</strong> @Model.OwnerName
    </div>
    <div>
        <strong>Phone Number:</strong> @Model.PhoneNumber
    </div>
    <div>
        <strong>Pet Name:</strong> @Model.PetName
    </div>
    <div>
        <strong>Vaccination Date:</strong> @Model.Vac_Date
    </div>
    <div>
        <strong>NextVac Date:</strong> @Model.NextVac_Date
    </div>
    <div>
        <strong>Deworming:</strong> @Model.Deworming
    </div>
  

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="OwnerId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

